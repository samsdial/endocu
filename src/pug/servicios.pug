                                    #subAccordion7.accordion
                                        .subcard.position-relative
                                            #headingOne7.subcard_header
                                                h5.mb-0
                                                    button.btn.btn_ghost(type='button' data-toggle='collapse' data-target='#collapseOne7' aria-expanded='true' aria-controls='collapseOne7')
